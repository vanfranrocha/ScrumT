@model Ferramenta_Scrumt.MODEL.ProductBacklog

@{
    ViewBag.Title = "Editar Historia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-heading">
    <h3>
        Equipe
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            <a href="/Users/Index">Projeto</a>
        </li>
        <li class="active">Editar Historia</li>
    </ul>

</div>
<body>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Editar Historia 
                        </header>
                        <div class="panel-body">
                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Projeto, "Projeto", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Projeto", (SelectList)ViewBag.Descricao, "Selecione um Projeto", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Projeto, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Historia, "Historia", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Historia, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Historia, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Importancia, "Importancia", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Importancia", new SelectList(ViewBag.Importancia, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Importancia, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Aceito, "Aceito", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.DropDownList("Aceito", new SelectList(ViewBag.Aceito, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Aceito, "", new { @class = "text-danger" })
                                </div>
                            </form>
                            
                                <div class="form-group">
                                    <input type="submit" formmethod="post" value="Salvar" class="btn btn-success" />
                                    @Html.ActionLink("Voltar", "Index", 0, new { @class = "btn btn-danger" })
                                </div>
                            
                        </div>
                    </section>
                </div>
            </div>
        </section>

}
</body>